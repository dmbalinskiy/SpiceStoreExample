@model IEnumerable<MenuItem>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<br />
<div class="border backgroundWhite">
    <div class="row">
        <div class="col-6">
            <h2 class="text-info"> Menu item list </h2>
        </div>
        <div class="col-6 text-right">
            <partial name="_CreateButtonPartial" />
        </div>
    </div>
    <br />
    <div>
        @if (Model.Any())
        {
            <table class="table table-striped border">
                <tr class="table-secondary">
                    <th>
                        @Html.DisplayNameFor(m => m.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(m => m.Price)
                    </th>
                    <th>
                        @Html.DisplayNameFor(m => m.CategoryId)
                    </th>
                    <th>
                        @Html.DisplayNameFor(m => m.SubcategoryId)
                    </th>
                    <th></th>
                    <th></th>
                </tr>
                @foreach (var cat in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(m => cat.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(m => cat.Price)
                        </td>
                        <td>
                            @Html.DisplayFor(m => cat.Category.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(m => cat.Subcategory.Name)
                        </td>
                        <td>
                            <partial name="_TableButtonPartial" model="cat.Id" />
                        </td>
                    </tr>
                }
            </table>
        }
        else
        {
            <p>No menu item exists...</p>
        }
    </div>
</div>

