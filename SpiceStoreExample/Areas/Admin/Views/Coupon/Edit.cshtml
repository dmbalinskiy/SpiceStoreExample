@model Coupon
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<h2 class="text-info">Edit coupon</h2>
<br />

<form method="post" enctype="multipart/form-data" asp-action="Edit">
    <div class="border backgroundWhite">

        <!--for validation message displaying-->
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <!--Name-->
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Name" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="Name" class="form-control" />
            </div>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <!--Picture - displaying -->
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Picture" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <img src="@ViewBag.ImgString"
                     width="100%"
                     style="border-radius:5px;border: 1px solid #bbb9b9;" />
            </div>
        </div>

        <!--Picture - selection-->
        <div class="form-group row">
            <div class="col-5 offset-2">
                <input type="file" id="projectImage" name="files" multiple class="form-control" />
            </div>
        </div>

        <!--Coupon type-->
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="CouponType" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <select asp-for="CouponType"
                        asp-items="Html.GetEnumSelectList<Coupon.ECouponType>()"
                        class="form-control">
                </select>
            </div>
        </div>

        <!--Discount-->
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Discount" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="Discount" class="form-control" />
            </div>
            <span asp-validation-for="Discount" class="text-danger"></span>
        </div>

        <!--Minimum amount-->
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="MinimumAmount" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="MinimumAmount" class="form-control" />
            </div>
            <span asp-validation-for="MinimumAmount" class="text-danger"></span>
        </div>

        <!--Is active-->
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="IsActive" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <input type="checkbox" asp-for="IsActive" class="form-control" />
            </div>
        </div>

        <div class="form-group row">
            <div class="col-5 offset-2">
                <partial name="_EditAndBackToListButton" model="Model.Id" />
            </div>
        </div>
    </div>
</form>

@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}

